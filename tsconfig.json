{
    "compilerOptions": {
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "target": "es6",
        "outDir": "./dist",
        "incremental": true,
        "esModuleInterop": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "watch": true,
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
    }